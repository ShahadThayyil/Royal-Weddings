<%- layout('/layouts/main') %>

<div class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Page Header -->
    <div class="text-center mb-16">
      <h1 class="text-4xl sm:text-5xl font-extrabold text-purple-900">Our Wedding Packages</h1>
      <p class="mt-4 text-xl text-gray-600">Choose the perfect package for your special day</p>
    </div>

    <!-- Packages Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
      <% packages.forEach(function(package) { %>
        <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition duration-300 overflow-hidden flex flex-col">
          <img src="<%= package.imageUrl %>" alt="<%= package.name %>" class="w-full h-56 object-cover">
          <div class="p-6 flex flex-col flex-grow">
            <h3 class="text-xl font-bold text-purple-800 mb-2"><%= package.name %></h3>
            <p class="text-gray-600 mb-4"><%= package.description %></p>
            
            <!-- Features -->
            <ul class="mb-4 space-y-2 flex-grow">
              <% package.features && package.features.forEach(function(feature) { %>
                <li class="flex items-start text-gray-700">
                  <svg class="w-5 h-5 text-yellow-400 mr-2 mt-1" fill="none" stroke="currentColor" stroke-width="2"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                  <span><%= feature %></span>
                </li>
              <% }); %>
            </ul>

            <!-- Price and CTA -->
            <div class="mt-4">
              <p class="text-2xl font-bold text-purple-700 mb-4">â‚¹<%= package.price %></p>
              <a href="/booking"
                class="w-full block text-center bg-yellow-300 hover:bg-yellow-400 text-purple-900 font-semibold px-6 py-2 rounded-lg transition duration-300">
                Book Now
              </a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>

    <!-- Custom Package CTA -->
    <div class="mt-20 text-center">
      <h2 class="text-2xl sm:text-3xl font-bold text-purple-900 mb-4">Need a Custom Package?</h2>
      <p class="text-gray-600 mb-6 text-lg">Contact us to create a package that perfectly fits your needs</p>
      <a href="/contact"
        class="inline-block bg-purple-900 text-white hover:bg-purple-800 px-8 py-3 rounded-full transition duration-300 shadow-lg">
        Contact Us
      </a>
    </div>

  </div>
</div>
