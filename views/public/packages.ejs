<%- layout('/layouts/main') %>

<div class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900">Our Wedding Packages</h1>
            <p class="mt-4 text-xl text-gray-600">Choose the perfect package for your special day</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <% packages.forEach(function(package) { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="<%= package.imageUrl %>" alt="<%= package.name %>" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-bold mb-2"><%= package.name %></h3>
                        <p class="text-gray-600 mb-4"><%= package.description %></p>
                        <ul class="mb-4">
                            <% package.features && package.features.forEach(function(feature) { %>
                                <li class="flex items-center text-gray-600 mb-2">
                                    <span class="text-primary mr-2">âœ“</span>
                                    <%= feature %>
                                </li>
                            <% }); %>
                        </ul>
                        <p class="text-primary font-bold text-2xl mb-4">$<%= package.price %></p>
                        <a href="/booking" class="block text-center bg-primary text-white px-6 py-2 rounded-lg hover:bg-opacity-90">Book Now</a>
                    </div>
                </div>
            <% }); %>
        </div>

        <div class="mt-16 text-center">
            <h2 class="text-2xl font-bold mb-4">Need a Custom Package?</h2>
            <p class="text-gray-600 mb-8">Contact us to create a package that perfectly fits your needs</p>
            <a href="/contact" class="btn-primary">Contact Us</a>
        </div>
    </div>
</div>