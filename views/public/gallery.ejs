<%- layout('/layouts/main') %>

<div class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900">Our Wedding Gallery</h1>
            <p class="mt-4 text-xl text-gray-600">Explore our beautiful wedding moments</p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            <% galleries.forEach(function(gallery) { %>
                <div class="relative overflow-hidden rounded-lg group">
                    <img src="<%= gallery.imageUrl %>" alt="<%= gallery.title %>" class="w-full h-64 object-cover transform transition-transform duration-300 group-hover:scale-110">
                    <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                        <p class="text-white text-center font-semibold"><%= gallery.title %></p>
                    </div>
                </div>
            <% }); %>
        </div>

        <div class="mt-16 text-center">
            <h2 class="text-2xl font-bold mb-4">Want to Create Your Own Beautiful Memories?</h2>
            <a href="/booking" class="btn-primary">Book Now</a>
        </div>
    </div>
</div>