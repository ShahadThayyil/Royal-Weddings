<%- layout('/layouts/main') %>

<div class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Heading -->
    <div class="text-center mb-16">
      <h1 class="text-4xl sm:text-5xl font-extrabold text-purple-900">Our Wedding Gallery</h1>
      <p class="mt-4 text-xl text-gray-600">Explore our beautiful wedding moments</p>
    </div>

    <!-- Gallery Grid -->
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6">
      <% galleries.forEach(function(gallery) { %>
        <div class="relative overflow-hidden rounded-2xl shadow-lg group">
          <img src="/uploads/<%= gallery.imageFilename %>" alt="<%= gallery.title %>" class="w-full h-60 object-cover transition duration-300 transform group-hover:scale-105">
          <div class="absolute inset-0 bg-purple-900 bg-opacity-60 opacity-0 group-hover:opacity-100 transition duration-300 flex items-center justify-center">
            <p class="text-white text-lg font-semibold px-4 text-center"><%= gallery.title %></p>
          </div>
        </div>
      <% }); %>
    </div>

    <!-- Call to Action -->
    <div class="mt-20 text-center">
      <h2 class="text-2xl sm:text-3xl font-bold text-purple-900 mb-4">Want to Create Your Own Beautiful Memories?</h2>
      <a href="/booking" class="inline-block bg-yellow-300 hover:bg-yellow-400 text-purple-900 font-semibold px-8 py-3 rounded-full transition duration-300 shadow-md">
        Book Now
      </a>
    </div>

  </div>
</div>
