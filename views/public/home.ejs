<!-- Hero Slider Wrapper -->
<div class="relative h-[600px] overflow-hidden">

    <!-- Image 1 -->
    <div id="slide1" class="absolute inset-0 bg-cover bg-center transition-opacity duration-1000 opacity-100"
         style="background-image: url('https://plus.unsplash.com/premium_photo-1674235766088-80d8410f9523?fm=jpg&q=60&w=3000');">
      <div class="absolute inset-0 bg-black bg-opacity-45"></div>
    </div>
  
    <!-- Image 2 -->
    <div id="slide2" class="absolute inset-0 bg-cover bg-center transition-opacity duration-1000 opacity-0"
         style="background-image: url('https://images.unsplash.com/photo-1523413651479-597eb2da0ad6?auto=format&q=60&w=3000');">
      <div class="absolute inset-0 bg-black bg-opacity-45"></div>
    </div>
  
    <!-- Content -->
    <div class="relative z-10 flex items-center justify-center h-full px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-2xl text-white" data-aos="fade-up">
        <h1 class="text-4xl sm:text-5xl font-bold mb-4 leading-tight">
          Your Perfect Day Begins Here
        </h1>
        <p class="text-lg sm:text-xl mb-6">
          Let us create the wedding of your dreams
        </p>
        <a href="/booking"
           class="bg-purple-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-purple-700 transition">
          Start Planning
        </a>
      </div>
    </div>
  </div>
  
  <!-- Slider Script -->
  <script>
    const slide1 = document.getElementById('slide1');
    const slide2 = document.getElementById('slide2');
  
    const images = [
      "https://plus.unsplash.com/premium_photo-1674235766088-80d8410f9523?fm=jpg&q=60&w=3000",
      "https://images.unsplash.com/photo-1523413651479-597eb2da0ad6?auto=format&q=60&w=3000",
      "https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&q=60&w=3000"
    ];
  
    let index = 0;
    let current = slide1;
    let next = slide2;
  
    setInterval(() => {
      index = (index + 1) % images.length;
  
      // Update next image background
      next.style.backgroundImage = `url('${images[index]}')`;
  
      // Crossfade
      next.classList.remove('opacity-0');
      next.classList.add('opacity-100');
  
      current.classList.remove('opacity-100');
      current.classList.add('opacity-0');
  
      // Swap references
      [current, next] = [next, current];
    }, 4000); // every 4 seconds
  </script>
  



