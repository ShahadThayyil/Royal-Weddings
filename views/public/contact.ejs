<%- layout('/layouts/main') %>

<div class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            <div>
                <h1 class="text-3xl font-bold mb-8">Contact Us</h1>
                
                <% if (locals.success) { %>
                    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                        Your message has been sent successfully. We'll get back to you soon!
                    </div>
                <% } %>

                <form action="/contact" method="POST">
                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="name">
                            Full Name
                        </label>
                        <input class="input-field" type="text" name="name" id="name" required>
                    </div>

                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
                            Email
                        </label>
                        <input class="input-field" type="email" name="email" id="email" required>
                    </div>

                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="subject">
                            Subject
                        </label>
                        <input class="input-field" type="text" name="subject" id="subject" required>
                    </div>

                    <div class="mb-6">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="message">
                            Message
                        </label>
                        <textarea class="input-field h-32" name="message" id="message" required></textarea>
                    </div>

                    <button type="submit" class="btn-primary w-full">
                        Send Message
                    </button>
                </form>
            </div>

            <div class="bg-white rounded-lg shadow-md p-8">
                <h2 class="text-2xl font-bold mb-6">Get in Touch</h2>
                
                <div class="space-y-6">
                    <div>
                        <h3 class="text-lg font-semibold mb-2">Our Office</h3>
                        <p class="text-gray-600">
                            123 Wedding Street<br>
                            City, Country<br>
                            Postal Code
                        </p>
                    </div>

                    <div>
                        <h3 class="text-lg font-semibold mb-2">Contact Information</h3>
                        <p class="text-gray-600">
                            Phone: +1 234 567 890<br>
                            Email: info@royalweddingplanners.com
                        </p>
                    </div>

                    <div>
                        <h3 class="text-lg font-semibold mb-2">Business Hours</h3>
                        <p class="text-gray-600">
                            Monday - Friday: 9:00 AM - 6:00 PM<br>
                            Saturday: 10:00 AM - 4:00 PM<br>
                            Sunday: Closed
                        </p>
                    </div>

                    <div>
                        <h3 class="text-lg font-semibold mb-2">Quick Connect</h3>
                        <a href="https://wa.me/1234567890" target="_blank" class="inline-flex items-center bg-green-500 text-white px-6 py-2 rounded-lg hover:bg-green-600">
                            <span>Chat on WhatsApp</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>