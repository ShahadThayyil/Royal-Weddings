<%- layout('/layouts/main') %>

<div class="py-16 bg-gradient-to-br from-purple-100 via-yellow-50 to-purple-50 min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
      
      <!-- Contact Form -->
      <div class="bg-white rounded-2xl shadow-xl p-10 border border-purple-100">
        <div class="flex items-center mb-8">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-purple-700 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12H8m0 0H5m3 0h3m6 0h3m-3 0h-3m0 0v3m0-3V9m0 3v3m0-3H9" />
          </svg>
          <h1 class="text-3xl font-extrabold text-purple-700">Contact Us</h1>
        </div>

        <% if (locals.success) { %>
          <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6 text-center flex items-center justify-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>Your message has been sent successfully. We'll get back to you soon!</span>
          </div>
        <% } %>

        <form action="/contact" method="POST" class="space-y-5">
          <div>
            <label class="block text-purple-700 font-medium mb-1" for="name">Full Name</label>
            <input class="w-full px-4 py-2 border border-purple-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" type="text" name="name" id="name" required>
          </div>

          <div>
            <label class="block text-purple-700 font-medium mb-1" for="email">Email</label>
            <input class="w-full px-4 py-2 border border-purple-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" type="email" name="email" id="email" required>
          </div>

          <div>
            <label class="block text-purple-700 font-medium mb-1" for="subject">Subject</label>
            <input class="w-full px-4 py-2 border border-purple-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" type="text" name="subject" id="subject" required>
          </div>

          <div>
            <label class="block text-purple-700 font-medium mb-1" for="message">Message</label>
            <textarea class="w-full px-4 py-3 border border-purple-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 h-32 resize-none" name="message" id="message" required></textarea>
          </div>

          <button type="submit" class="w-full bg-yellow-400 hover:bg-yellow-500 text-purple-900 font-semibold py-3 px-6 rounded-lg transition-all shadow-lg flex justify-center items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-900" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 17l4 4 4-4m0-5V3H4v9h16z" />
            </svg>
            Send Message
          </button>
        </form>
      </div>

      <!-- Contact Details -->
      <div class="bg-white rounded-2xl shadow-xl p-10 border border-yellow-100 max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-purple-700 mb-8 text-center">Get in Touch</h2>
      
        <div class="space-y-8 text-gray-700">
      
          <!-- Office -->
          <div class="flex items-start gap-4">
            <img src="https://img.icons8.com/ios-filled/50/8b5cf6/marker.png" alt="Office Icon" class="w-6 h-6 mt-1">
            <div>
              <h3 class="text-lg font-semibold">Our Office</h3>
              <p>Malappuram, Kerala</p>
            </div>
          </div>
      
          <!-- Contact Info -->
          <div class="flex items-start gap-4">
            <img src="https://img.icons8.com/ios-filled/50/8b5cf6/email.png" alt="Email Icon" class="w-6 h-6 mt-1">
            <div>
              <h3 class="text-lg font-semibold">Contact Information</h3>
              <p>Phone: +91 9746407018<br>Email: royalweddingplanners@gmail.com</p>
            </div>
          </div>
      
          <!-- Business Hours -->
          <div class="flex items-start gap-4">
            <img src="https://img.icons8.com/ios-filled/50/8b5cf6/clock.png" alt="Clock Icon" class="w-6 h-6 mt-1">
            <div>
              <h3 class="text-lg font-semibold">Business Hours</h3>
              <p>Mon - Fri: 9 AM - 6 PM<br>Saturday: 10 AM - 4 PM<br>Sunday: Closed</p>
            </div>
          </div>
      
          <!-- WhatsApp -->
          <div class="text-center">
            <h3 class="text-lg font-semibold mb-2">Quick Connect</h3>
            <a href="https://wa.me/9746407018" target="_blank" class="inline-flex items-center gap-2 bg-green-500 text-white px-6 py-2 rounded-lg hover:bg-green-600 transition-all shadow-md">
              <img src="https://img.icons8.com/ios-filled/24/ffffff/whatsapp--v1.png" alt="WhatsApp" class="w-5 h-5">
              <span>Chat on WhatsApp</span>
            </a>
          </div>
          
        </div>
      </div>
      
      
      

    </div>
  </div>
</div>
