<%- layout('/layouts/main') %>

<div class="py-16 bg-gray-50">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-lg shadow-md p-8">
            <h1 class="text-3xl font-bold text-center mb-8">Book Your Wedding</h1>

            <% if (locals.success) { %>
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                    Your booking request has been submitted successfully. We'll contact you soon!
                </div>
            <% } %>

            <form action="/booking" method="POST">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="name">
                            Full Name
                        </label>
                        <input class="input-field" type="text" name="name" id="name" required>
                    </div>

                    <div>
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
                            Email
                        </label>
                        <input class="input-field" type="email" name="email" id="email" required>
                    </div>

                    <div>
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="phone">
                            Phone Number
                        </label>
                        <input class="input-field" type="tel" name="phone" id="phone" required>
                    </div>

                    <div>
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="date">
                            Wedding Date
                        </label>
                        <input class="input-field" type="date" name="date" id="date" required>
                    </div>
                </div>

                <div class="mt-6">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="message">
                        Additional Details
                    </label>
                    <textarea class="input-field h-32" name="message" id="message" required></textarea>
                </div>

                <div class="mt-8">
                    <button type="submit" class="w-full btn-primary">
                        Submit Booking Request
                    </button>
                </div>
            </form>
        </div>

        <div class="mt-8 text-center text-gray-600">
            <p>Need to discuss something specific?</p>
            <a href="/contact" class="text-primary hover:underline">Contact us directly</a>
        </div>
    </div>
</div>