<%- layout('/layouts/main') %>

<div class="py-16 bg-gradient-to-br from-purple-100 via-yellow-50 to-purple-50 min-h-screen">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-2xl shadow-xl p-10 border border-purple-100">
            <div class="flex items-center justify-center mb-10">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-purple-700 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a1 1 0 00-1-1h-6m-2 0H5a1 1 0 00-1 1v7m0 0v5a1 1 0 001 1h14a1 1 0 001-1v-5m-16 0h16" />
                </svg>
                <h1 class="text-4xl font-extrabold text-center text-purple-700">Book Your Dream Wedding</h1>
            </div>

            <% if (locals.success) { %>
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6 text-center flex items-center justify-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>Your booking request has been submitted successfully. We'll contact you soon!</span>
                </div>
            <% } %>

            <form action="/booking" method="POST" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-purple-700 font-medium mb-2" for="name">Full Name</label>
                        <input class="w-full px-4 py-2 rounded-lg border border-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-500" type="text" name="name" id="name" required>
                    </div>

                    <div>
                        <label class="block text-purple-700 font-medium mb-2" for="email">Email</label>
                        <input class="w-full px-4 py-2 rounded-lg border border-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-500" type="email" name="email" id="email" required>
                    </div>

                    <div>
                        <label class="block text-purple-700 font-medium mb-2" for="phone">Phone Number</label>
                        <input class="w-full px-4 py-2 rounded-lg border border-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-500" type="tel" name="phone" id="phone" required>
                    </div>

                    <div>
                        <label class="block text-purple-700 font-medium mb-2" for="date">Wedding Date</label>
                        <input class="w-full px-4 py-2 rounded-lg border border-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-500" type="date" name="date" id="date" required>
                    </div>
                </div>

                <div>
                    <label class="block text-purple-700 font-medium mb-2" for="message">Additional Details</label>
                    <textarea class="w-full px-4 py-3 rounded-lg border border-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-500 h-32 resize-none" name="message" id="message" required></textarea>
                </div>

                <div class="pt-4">
                    <button type="submit" class="w-full bg-yellow-400 hover:bg-yellow-500 text-purple-900 font-semibold py-3 px-6 rounded-lg transition-all shadow-lg flex justify-center items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-900" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 17l4 4 4-4m0-5V3H4v9h16z" />
                        </svg>
                        Submit Booking Request
                    </button>
                </div>
            </form>

            <!-- Advance Payment Message -->
            <div class="mt-8 bg-yellow-100 border-l-4 border-yellow-400 text-yellow-800 p-4 rounded-lg shadow-md">
                <div class="flex items-center">
                    <svg class="w-6 h-6 mr-3 text-yellow-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M12 20c4.418 0 8-3.582 8-8s-3.582-8-8-8-8 3.582-8 8 3.582 8 8 8z" />
                    </svg>
                    <p class="text-sm md:text-base font-semibold">
                        An <span class="underline">advance payment</span> is <span class="text-red-600 font-bold">mandatory</span> to confirm the booking.
                    </p>
                </div>
            </div>
            <!-- End Advance Message -->

        </div>

        <div class="mt-10 text-center text-purple-600">
            <p>Need to discuss something specific?</p>
            <a href="/contact" class="text-yellow-500 hover:underline font-semibold">Contact us directly</a>
        </div>
    </div>
</div>
