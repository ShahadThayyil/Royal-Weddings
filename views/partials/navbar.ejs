  <!-- Script for scroll blur -->
  <script>
    const navbar = document.getElementById('navbar');
  
    window.addEventListener('scroll', () => {
      if (window.scrollY > 10) {
        navbar.classList.add('backdrop-blur-md', 'bg-purple-900/70');
      } else {
        navbar.classList.remove('backdrop-blur-md', 'bg-purple-900/70');
      }
    });
  
    // Mobile toggle
    const toggleBtn = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    let menuOpen = false;
  
    toggleBtn.addEventListener('click', () => {
      menuOpen = !menuOpen;
      if (menuOpen) {
        mobileMenu.classList.remove('max-h-0', 'opacity-0', 'scale-y-95');
        mobileMenu.classList.add('max-h-[500px]', 'opacity-100', 'scale-y-100');
      } else {
        mobileMenu.classList.remove('max-h-[500px]', 'opacity-100', 'scale-y-100');
        mobileMenu.classList.add('max-h-0', 'opacity-0', 'scale-y-95');
      }
    });
  </script>
  