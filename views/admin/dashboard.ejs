<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Royal Wedding Planners</title>
    <link href="/css/output.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="min-h-screen">
        <!-- Navigation -->
        <nav class="bg-white shadow-md">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <h1 class="text-xl font-bold text-primary">Admin Dashboard</h1>
                    </div>
                    <div class="flex items-center">
                        <a href="/admin/logout" class="text-gray-600 hover:text-primary">Logout</a>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <!-- Gallery Management -->
            <div class="mb-12">
                <h2 class="text-2xl font-bold mb-6">Gallery Management</h2>
                <div class="bg-white rounded-lg shadow-md p-6">
                    <form action="/admin/gallery" method="POST" class="mb-8">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <input type="text" name="title" placeholder="Image Title" class="input-field" required>
                            <input type="text" name="imageUrl" placeholder="Image URL" class="input-field" required>
                        </div>
                        <button type="submit" class="mt-4 btn-primary">Add Image</button>
                    </form>

                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                        <% galleries.forEach(function(gallery) { %>
                            <div class="relative">
                                <img src="<%= gallery.imageUrl %>" alt="<%= gallery.title %>" class="w-full h-48 object-cover rounded-lg">
                                <button onclick="deleteGallery('<%= gallery._id %>')" class="absolute top-2 right-2 bg-red-500 text-white p-2 rounded-full hover:bg-red-600">
                                    Ã—
                                </button>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <!-- Package Management -->
            <div class="mb-12">
                <h2 class="text-2xl font-bold mb-6">Package Management</h2>
                <div class="bg-white rounded-lg shadow-md p-6">
                    <form action="/admin/package" method="POST" class="mb-8">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <input type="text" name="name" placeholder="Package Name" class="input-field" required>
                            <input type="number" name="price" placeholder="Price" class="input-field" required>
                            <input type="text" name="imageUrl" placeholder="Image URL" class="input-field" required>
                            <textarea name="description" placeholder="Description" class="input-field" required></textarea>
                        </div>
                        <button type="submit" class="mt-4 btn-primary">Add Package</button>
                    </form>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <% packages.forEach(function(package) { %>
                            <div class="relative bg-gray-50 rounded-lg p-4">
                                <h3 class="text-xl font-bold mb-2"><%= package.name %></h3>
                                <p class="text-gray-600 mb-2"><%= package.description %></p>
                                <p class="text-primary font-bold">$<%= package.price %></p>
                                <button onclick="deletePackage('<%= package._id %>')" class="absolute top-2 right-2 text-red-500 hover:text-red-600">
                                    Delete
                                </button>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <!-- Booking Management -->
            <div class="mb-12">
                <h2 class="text-2xl font-bold mb-6">Booking Management</h2>
                <div class="bg-white rounded-lg shadow-md p-6">
                    <div class="overflow-x-auto">
                        <table class="min-w-full">
                            <thead>
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% bookings.forEach(function(booking) { %>
                                    <tr>
                                        <td class="px-6 py-4"><%= booking.name %></td>
                                        <td class="px-6 py-4"><%= booking.email %></td>
                                        <td class="px-6 py-4"><%= booking.phone %></td>
                                        <td class="px-6 py-4"><%= booking.date.toLocaleDateString() %></td>
                                        <td class="px-6 py-4"><%= booking.status %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Contact Management -->
            <div>
                <h2 class="text-2xl font-bold mb-6">Contact Management</h2>
                <div class="bg-white rounded-lg shadow-md p-6">
                    <div class="overflow-x-auto">
                        <table class="min-w-full">
                            <thead>
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subject</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Message</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% contacts.forEach(function(contact) { %>
                                    <tr>
                                        <td class="px-6 py-4"><%= contact.name %></td>
                                        <td class="px-6 py-4"><%= contact.email %></td>
                                        <td class="px-6 py-4"><%= contact.subject %></td>
                                        <td class="px-6 py-4"><%= contact.message %></td>
                                        <td class="px-6 py-4">
                                            <button onclick="deleteContact('<%= contact._id %>')" class="text-red-500 hover:text-red-600">
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        async function deleteGallery(id) {
            if (confirm('Are you sure you want to delete this image?')) {
                const response = await fetch(`/admin/gallery/${id}`, {
                    method: 'DELETE'
                });
                if (response.ok) {
                    location.reload();
                }
            }
        }

        async function deletePackage(id) {
            if (confirm('Are you sure you want to delete this package?')) {
                const response = await fetch(`/admin/package/${id}`, {
                    method: 'DELETE'
                });
                if (response.ok) {
                    location.reload();
                }
            }
        }

        async function deleteContact(id) {
            if (confirm('Are you sure you want to delete this contact?')) {
                const response = await fetch(`/admin/contact/${id}`, {
                    method: 'DELETE'
                });
                if (response.ok) {
                    location.reload();
                }
            }
        }
    </script>
</body>
</html>